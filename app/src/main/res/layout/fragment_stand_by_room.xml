<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/title_background_responsive_nontitlever"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/dialog_background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/stand_by_room"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/text_secret_word"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:textSize="24sp"
        app:layout_constraintTop_toTopOf="@+id/dialog_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/user1_icon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/user01_normal"
        android:layout_marginTop="100dp"
        android:layout_marginStart="12dp"
        android:visibility="invisible"
        app:layout_constraintTop_toTopOf="@+id/dialog_background"
        app:layout_constraintStart_toStartOf="@+id/dialog_background"/>

    <TextView
        android:id="@+id/user1_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="user1"
        android:visibility="invisible"
        android:layout_marginTop="-12dp"
        app:layout_constraintTop_toBottomOf="@+id/user1_icon"
        app:layout_constraintStart_toStartOf="@+id/user1_icon"
        app:layout_constraintEnd_toEndOf="@+id/user1_icon"/>

    <ImageView
        android:id="@+id/user2_icon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/user02_normal"
        android:visibility="invisible"
        android:layout_marginTop="100dp"
        android:layout_marginStart="12dp"
        app:layout_constraintTop_toTopOf="@+id/dialog_background"
        app:layout_constraintStart_toEndOf="@+id/user1_icon"/>

    <TextView
        android:id="@+id/user2_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="user2"
        android:visibility="invisible"
        android:layout_marginTop="-12dp"
        app:layout_constraintTop_toBottomOf="@+id/user1_icon"
        app:layout_constraintStart_toStartOf="@+id/user2_icon"
        app:layout_constraintEnd_toEndOf="@+id/user2_icon"/>

    <ImageView
        android:id="@+id/user3_icon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/user03_normal"
        android:visibility="invisible"
        android:layout_marginStart="12dp"
        app:layout_constraintTop_toBottomOf="@+id/user1_name"
        app:layout_constraintStart_toStartOf="@+id/dialog_background"/>

    <TextView
        android:id="@+id/user3_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="user3"
        android:visibility="invisible"
        android:layout_marginTop="-12dp"
        app:layout_constraintTop_toBottomOf="@+id/user3_icon"
        app:layout_constraintStart_toStartOf="@+id/user3_icon"
        app:layout_constraintEnd_toEndOf="@+id/user3_icon"/>

    <ImageView
        android:id="@+id/user4_icon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/user04_normal"
        android:visibility="invisible"
        android:layout_marginStart="12dp"
        app:layout_constraintTop_toBottomOf="@+id/user2_name"
        app:layout_constraintStart_toEndOf="@+id/user3_icon"/>

    <TextView
        android:id="@+id/user4_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="user4"
        android:visibility="invisible"
        android:layout_marginTop="-12dp"
        app:layout_constraintTop_toBottomOf="@+id/user4_icon"
        app:layout_constraintStart_toStartOf="@+id/user4_icon"
        app:layout_constraintEnd_toEndOf="@+id/user4_icon"/>

    <ImageView
        android:id="@+id/bt_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/bt_start"
        android:layout_marginBottom="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/dialog_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>