<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/title_background_responsive_nontitlever"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/dialog_background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/text_null"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/character01"
        android:layout_width="92dp"
        android:layout_height="92dp"
        android:src="@drawable/user01_normal"
        android:layout_marginBottom="80dp"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/character02"
        android:layout_width="92dp"
        android:layout_height="92dp"
        android:src="@drawable/user02_normal"
        android:layout_marginBottom="80dp"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/character01"/>

    <ImageView
        android:id="@+id/character03"
        android:layout_width="92dp"
        android:layout_height="92dp"
        android:src="@drawable/user03_normal"
        android:layout_marginBottom="80dp"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/character02"/>

    <ImageView
        android:id="@+id/character04"
        android:layout_width="92dp"
        android:layout_height="92dp"
        android:src="@drawable/user04_normal"
        android:layout_marginBottom="80dp"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/character03"/>

</androidx.constraintlayout.widget.ConstraintLayout>